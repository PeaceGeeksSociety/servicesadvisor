function services_advisor_base_ds_fields_info($entity_type) {
  $fields = array();

  if ($entity_type == 'node') {
    $fields['edit_node'] = array(
      'title' => t('Edit node'),
      'field_type' => DS_FIELD_TYPE_FUNCTION,
      'function' => 'services_advisor_base_render_edit_node',
    );
    $fields['expired_node'] = array(
